{
  "compilerOptions": {
    "target": "es5", 
    "module": "esnext", 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx", 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true, 
    
    "strict": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    
   
    "noEmit": true, 
    "outDir": "./dist"
  },
  
 
  "include": [
    "src/**/*"
  ],
  
 
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}